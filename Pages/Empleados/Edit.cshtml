@page
@model HotelBooking.Pages.Empleados.EditModel

@{
    ViewData["Title"] = "Editar Empleado";
}

<h1>Editar Empleado</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="Empleado.IdEmpleado" />
            <div class="form-group">
                <label asp-for="Empleado.NombreEmpleado"></label>
                <input asp-for="Empleado.NombreEmpleado" class="form-control" />
                <span asp-validation-for="Empleado.NombreEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Posicion"></label>
                <input asp-for="Empleado.Posicion" class="form-control" />
                <span asp-validation-for="Empleado.Posicion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.IdUsuario" class="control-label"></label>
                <input asp-for="Empleado.IdUsuario" class="form-control" />
                <span asp-validation-for="Empleado.IdUsuario" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        </form>
    </div>
</div>