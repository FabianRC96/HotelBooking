@page
@model HotelBooking.Pages.Empleados.DetailModel
@{
    ViewData["Title"] = "Detalles del Empleado";
}

<h1>Detalles del Empleado</h1>

<div>
    <h4>Empleado</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Empleado.NombreEmpleado</dd>
        <dt class="col-sm-2">Posición</dt>
        <dd class="col-sm-10">@Model.Empleado.Posicion</dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Empleado.IdEmpleado" class="btn btn-warning">Editar</a> |
    <a asp-page="./Index" class="btn btn-secondary">Volver a la Lista</a>
</div>