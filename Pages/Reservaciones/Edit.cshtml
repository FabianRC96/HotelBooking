@page
@model HotelBooking.Pages.Reservaciones.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Reservación</h1>

<h4>Reservacion</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reservacion.IdReservacion" />

            <div class="form-group">
                <label asp-for="Reservacion.IdCliente" class="control-label"></label>
                <select asp-for="Reservacion.IdCliente" class="form-control" asp-items="ViewBag.IdCliente"></select>
                <span asp-validation-for="Reservacion.IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservacion.IdHabitacion" class="control-label"></label>
                <select asp-for="Reservacion.IdHabitacion" class="form-control" asp-items="ViewBag.IdHabitacion"></select>
                <span asp-validation-for="Reservacion.IdHabitacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservacion.FechaEntrada" class="control-label"></label>
                <input asp-for="Reservacion.FechaEntrada" class="form-control" />
                <span asp-validation-for="Reservacion.FechaEntrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservacion.FechaSalida" class="control-label"></label>
                <input asp-for="Reservacion.FechaSalida" class="form-control" />
                <span asp-validation-for="Reservacion.FechaSalida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservacion.TotalPago" class="control-label"></label>
                <input asp-for="Reservacion.TotalPago" class="form-control" />
                <span asp-validation-for="Reservacion.TotalPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn btn-primary">Regresar</a>
</div>